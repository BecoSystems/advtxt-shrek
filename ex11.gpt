/* ---------------------------------------------------------------------- */
/* algoritmo */
algoritmo shrek;

variáveis

select : literal;
select2 : literal;

fim-variáveis

início

imprima ("Bem vimdo a sherek, a aventura BLABLABLA, escolha y ou n");
select :=leia();

enquanto (select<>"y" e select<>"n") faça

imprima("Digite y ou n: ");
select :=leia();

fim-enquanto

se (select="y") então

imprima("Escolha de objeto certa, y ou n");
select2 :=leia();

se (select2="y") então
imprima("Escolha da ação certa");
fim-se

se (select2="n") então
imprima("Escolha da ação errada");
fim-se

fim-se

se (select="n") então

imprima("Escolha de objeto errada");

fim-se

fim
